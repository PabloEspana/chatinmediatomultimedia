        android:layout_height="30dp"
        android:layout_width="40dp"
        android:src="@drawable/user2"/>

    <TextView
        android:id="@+id/msgr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="3dp"
